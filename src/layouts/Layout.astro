---
import "../styles/global.css";
import Footer from "./Footer.astro";
import Navbar from "./Navbar.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>Fiber Network</title>
		<meta name="description" content="Scaling Satoshi's P2P Ecash Vision" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://www.fiber.world/" />
		<meta property="og:title" content="Fiber Network" />
		<meta property="og:description" content="Scaling Satoshi's P2P Ecash Vision" />
		<meta property="og:image" content="/imgs/open-graph.png" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://www.fiber.world/" />
		<meta property="twitter:title" content="Fiber Network" />
		<meta property="twitter:description" content="Scaling Satoshi's P2P Ecash Vision" />
		<meta property="twitter:image" content="/open-graph.png" />
	</head>
	<body class="text-text-primary m-0 w-full h-full bg-gradient-to-b from-purple-light via-cyan-light to-yellow-light">
		<Navbar />
		<slot />
		<Footer />

		<!-- Custom cursor on button -->
		<div id="custom-cursor" class="custom-cursor hidden">
			<svg width="48" height="48" xmlns="http://www.w3.org/2000/svg">
				<circle fill="#FFFFFF" stroke="#FFFFFF" stroke-width="4" cx="24" cy="24" r="16"></circle>
			</svg>
		</div>
		<script src="/src/scripts/custom-cursor.js" defer></script>
	</body>
</html>
