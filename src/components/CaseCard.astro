---
interface Props {
	icon: string;
	title: string;
	description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class={`p-5 h-[303px] rounded-xl flex flex-col justify-center align-middle items-start gap-10 bg-blue border-1 border-border-black`}
>
  <>
    <div class="flex gap-4 justify-center items-center align-middle">
      <div class="py-2 px-2 bg-yellow rounded-xl">
        <img src={icon} alt="" class="w-8 h-8" />
      </div>
      <h3>{title}</h3>
    </div>

    <p class="block text-text-primary mt-2 text-body1">
      {description}
    </p>
  </>
</div>
