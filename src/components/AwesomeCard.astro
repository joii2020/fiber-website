---
interface awesomeListProps {
	title: string;
	description: string;
	link: string;
}
interface Props {
	iconSrc: string;
	title: string;
	list: awesomeListProps[];
}

const { iconSrc, title, list } = Astro.props;
---


<div class={`px-5 py-10 rounded-xl flex flex-col gap-4 justify-center align-middle items-start bg-cyan border-1 border-border-black`}>
    <div class="flex flex-col gap-5">
        <div class={`w-14 h-14 bg-purple-dark rounded flex justify-center items-center`}>
        <img class="w-8 h-8" src={`/icons/${iconSrc}.svg`} alt={`${iconSrc}`} />
    </div>
    <h3 class={`text-primary`}>{title}</h3>
    </div>
    {list.map((item) => (
        <div class="flex flex-col gap-2">
            <a
                target="_blank"
                rel="noopener noreferrer"
                href={item.link}
                class="flex gap-2 cursor-pointer group relative"
            >
            <h4 class="text-purple-dark group-hover:underline transition-all duration-200">
                {item.title}
            </h4>
            <img
                class="w-6 h-6 opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none"
                src="/icons/arrow-right.svg"
                alt="external resource"
            />
            </a>
            <div class="text-body1">{item.description}</div>
        </div>
    ))}    
</div>